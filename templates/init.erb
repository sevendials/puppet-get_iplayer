start on (filesystem and net-device-up IFACE=lo)
stop on runlevel [!2345]

# give time to send info to trackers
kill timeout 30

script
  export GETIPLAYERUSERPREFS=<%= @conf_dir %>
  exec /usr/bin/perl <%= @instdir %>/get_iplayer.cgi -p <%= @listen_port %> -g <%= @instdir %>/get_iplayer -l <%= @listen_address %>
end script
