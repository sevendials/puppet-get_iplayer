[Unit]
Description=get_iplayer
Wants=basic.target
After=basic.target network.target

[Service]
EnvironmentFile=-<%= @service_env_path %>
ExecStart=/usr/bin/perl <%= @instdir %>/get_iplayer.cgi -p <%= @listen_port %> -g <%= @instdir %>/get_iplayer -l <%= @listen_address %>
KillMode=process

[Install]
WantedBy=multi-user.target
